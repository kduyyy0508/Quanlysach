<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav" >
                <li class="nav-item active">
                    <a class="nav-link" href="#">BOOK STORE</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">GIO HANG</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">DANG NHAP</a>
                </li>
            </ul>
            <style>
                .navbar-nav li {
                    margin-right: 30px; /* Khoảng cách bên phải giữa các mục */
                }
            </style>
        </nav>
        <br />
        <div>
            <div class="row">
                <div class="col-md-3">
                    <div class="title">CHỦ ĐỀ SÁCH</div>
                    <ul class="list-group">
                        <li class="list-group-item">Khoa Hoc</li>
                        <li class="list-group-item">Lich Su</li>
                        <li class="list-group-item">Dia Ly</li>
                    </ul>
                    <div class="title">NHÀ XUẤT BẢN</div>
                    <ul class="list-group">
                        <li class="list-group-item">Alexander</li>
                        <li class="list-group-item">Napoleon</li>
                        <li class="list-group-item">Kim Dong</li>
                    </ul>
                </div>
                <div class="col-md-9">
                    <img style="width:100%;" src="~/Images/banner.jpg" /> 
                    <div style="color:red; text-align: center; margin:15px 0;">
                        SÁCH MOI
                    </div>
                    @RenderBody();
                    <br/>
                    </div>
                </div>
            </div>
        </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
