@using Quanlysach.Models;
@{
    ViewBag.Title = "HienThiGioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table>
    <thead>
        <tr>
            <th>Mã sách</th>
            <th>Tên sách</th>
            <th>Ảnh bìa</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sach in Model)
        {
            <tr>
                <td>@sach.MaSach</td>
                <td>@sach.TenSach</td>
                <td><img src="~/Images/@sach.AnhBia" /></td>
                <td>@sach.SoLuong</td>
                <td>@sach.DonGia</td>
                <td>@sach.ThanhTien()</td>
            </tr>
        }
    <tr style="font-weight:bold;text-align:right;color:red">
        <td colspan="5">Tổng số lượng: @ViewBag.TongSL</td>
        <td colspan="5">Tổng số lượng: @ViewBag.TongTien</td>
    </tr>
    </tbody>
</table>
