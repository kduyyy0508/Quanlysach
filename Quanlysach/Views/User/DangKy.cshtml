
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 style="text-align:center">ĐĂNG KÝ TÀI KHOẢN</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("DangKy", "User"))
        {
            @Html.ValidationSummary(false)
            <div class="form-group">
                <label for="name">Họ và Tên:</label>
                @Html.TextBox("HoTenKH", null, new { @class = "form-control",@id ="name",required = "required"})
            </div>
            <div class="form-group">
                <label for="dangnhap">Tên đăng nhập:</label>
                @Html.TextBox("TenDN", null, new{@class = "form-control", @id ="dangnhap",required = "required" })
            </div>
            <div class="form-group">
                <label for="matkhau">Mat khau:</label>
                @Html.Password("Matkhau", null, new{@class = "form-control",@id ="matkhau", required = "required"})
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                @Html.TextBox("Email", null, new{@class = "form-control",@id ="email",type = "email",required = "required"})
            </div>
            <div class="form-group">
                <label for="dienthoai">Số Điện thoại:</label>
                @Html.TextBox("DienthoaiKH", null, new{@class = "form-control",@id ="dienthoai",required = "required"})
            </div>
            <button type="submit" class="btn btn-primary">ĐĂNG KÝ</button>
        }
    </div>
</div>


