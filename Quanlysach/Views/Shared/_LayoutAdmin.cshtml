<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    @Html.ActionLink("TRANG CHỦ", "Index", "Admin", null, new
                    {
                        @class = "nav-link"
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Quản lý chủ đề", "ChuDe", "Admin", null, new
                    {
                        @class = "nav-link"
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Quản lý NXB", "NhaXuatBan", "Admin", null, new
                    {
                        @class = "nav-link"
                    })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Quản lý sách", "Sach", "Admin", null, new
                    {
                        @class = "nav-link"
                    })
                </li>
            </ul>
        </nav>
        <br />
        @RenderBody()
    </div>
    Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
